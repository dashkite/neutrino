px = (value) -> "#{value}px"
pct = (value) -> "#{value}%"
em = (value) -> "#{value}em"
ch = (value) -> "#{value}ch"
rem = (value) -> "#{value}rem"
hrem = (value) -> "#{value / 2}rem"
qrem = (value) -> "#{value / 4}rem"
vw = (value) -> "#{value}vw"
vh = (value) -> "#{value}vh"
deg = (value) -> "#{value}deg"

export {px, pct, em, ch, rem, hrem, qrem, vw, vh, deg}
